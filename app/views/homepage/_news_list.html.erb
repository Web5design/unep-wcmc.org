<div class="section-group">
  <% @cms_page.children.reverse.take(6).each do |page|   %>
    <section class="group">
    <small>
      <%= cms_page_content(:time, page)  %>
    </small>
    <a href="<%= page.full_path %>">
    <% if cms_page_content(:news_img, page) %>
      <img src="<%= cms_page_content(:news_img, page).file.url %>" width="" height="" alt="project 2"/>
    </a>
    <% end %>
    <h2 class="smaller"><a class="heading" href="<%= page.full_path %>"> <%= cms_page_content(:news_header,page) %> </a></h2>
    <p>
      <%= cms_page_content(:short_description, page) %>
    </p>
    </section>
  <% end  %>
</div>
