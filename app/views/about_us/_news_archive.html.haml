#news-archive.column-2-3
  %h1#first News archive
  - Cms::Site.find_by_identifier('homepage').pages.root.children.published.reverse.each do |page|
    %section
      %h2.smaller
        %a{:href => page.full_path}
          = cms_page_content(:news_header,page)
      %h3 
        = formatted_time(cms_page_content(:time, page))
      %p
        = cms_page_content(:short_description, page)
